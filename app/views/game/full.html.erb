<%= stylesheet_link_tag 'game' %>

<%= render :partial => "railsgame/init" %>

<%= render :partial => "railsgame/chat_container",
           :locals => { :id => 'chat' } %>

<%= render :partial => "railsgame/hexgrid_container",
           :locals => { :id => 'hexgrid', :grid_size => [ 7, 5 ],
                        :tile_spacing => [ 53, 62 ],
                        :tile_size => [72, 62] } %>

<%= render :partial => "railsgame/console_container",
           :locals => { :id => 'world' } %>

<script type="text/javascript">
//<![CDATA[
